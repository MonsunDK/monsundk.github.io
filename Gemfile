# Windows / JRuby helpers
gem "tzinfo-data", platforms: [:windows, :jruby]

# Ruby 3.4+ std-lib gems that are no longer bundled
gem "csv"
gem "base64"
gem "webrick", "~> 1.9"
gem "fiddle" # for Jekyll 4.0+